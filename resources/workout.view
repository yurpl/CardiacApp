<svg id="workoutPage">
    <image id="image" href="background.png" width="100%" height="100%"/>
    <text id="workoutHeader" x="50%" y="10%" font-family="System-Regular" fill="fb-white" font-size="16" font-weight="bold" text-anchor="middle" text-length="100">Workout Title</text>
    <textarea id="workoutInstructions" x="10%" y="15%" width="100%-50" font-family="System-Regular" fill="black" font-size="24">Press Go to begin Workout!</textarea>
    <use id="btn-workout-next" href="#icon-button" class="medium-button application-fill plus-button" fill="fb-green"></use>
    <text id="workoutCount" x="50%" y="50%" font-family="System-Regular" fill="white" font-size="60" font-weight="bold" text-anchor="middle" text-length="32"></text>
  <use id="stop-button" href="#icon-button" class="medium-button application-fill plus-button" fill="fb-red"/>

</svg>